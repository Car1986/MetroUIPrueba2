<h5 style="margin-top:70px; margin-left:20px;color:blue;">Usuario: Pedro Galdames</h5>
<div class="container" id="principal">

    <h3>Nuevo Producto</h3>
    <hr />
    <form class="bg-white p-6 mx-auto border bd-default win-shadow">
        <table>
            <tr><td id="td1">Codigo Prod.:</td><td style="padding:2px;width:450px"><input style="text-transform:uppercase;" type="text" data-role="input" data-append="#" class="input-small"></td></tr>
            <tr><td id="td1">Ingreso:</td><td style="padding-left:2px;"><input type="date" data-role="input" class="input-small" /></td></tr>
            <tr>
                <td style="padding-right: 15px;padding-top: 2px;">Valoración:</td>
                <td style="padding:2px;"><input type="text" onkeyup="format(this)" data-role="input" data-append="$.00" class="input-small"></td>
            </tr>
            <tr>
                <td style="padding-right: 15px; padding-top: 2px; ">Imagen:</td>
                <td style="padding:2px;"><input type="text" data-role="input" data-append="/Ruta" class="input-small"></td>
            </tr>
            <tr>
                <td style="padding-right: 15px;padding-top: 2px">Descripción:</td>
                <td style="padding:2px;"><textarea data-role="textarea" data-prepend="<span class='mif-leanpub'></span>" class="input-small"></textarea></td>
            </tr>
            <tr>
                <td style="padding-right: 15px;padding-top: 2px;">Estado:</td>
                <td style="padding:2px;">
                    <select data-role="select" class="input-small">
                        <option value="0">Seleccione</option>
                        <option value="1">Fabricado</option>
                        <option value="2">En Diseño</option>
                    </select>
                </td>
            </tr>
        </table>
    </form>
</div>
<script type="text/javascript">

    function format(input) {
        var num = input.value.replace(/\./g, '');
        if (!isNaN(num)) {
            num = num.toString().split('').reverse().join('').replace(/(?=\d*\.?)(\d{3})/g, '$1.');
            num = num.split('').reverse().join('').replace(/^[\.]/, '');
            input.value = num;
        }

        else {
            alert('Solo se permiten numeros');
            input.value = input.value.replace(/[^\d\.]*/g, '');
        }
    }
</script>
