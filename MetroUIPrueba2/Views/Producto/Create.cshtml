@{
    ViewBag.Title = "Intranet";
    Layout = "~/Views/Shared/_IntranetLayout.cshtml";
}

<style>
    .login-form {
        width: 650px;
        height: auto;
        top: 50%;
        margin-top: -10px;
    }

    #principal {
        width: 900px;
        height: auto;
        top: 50%;
        margin-top: 60px;
        border: 1px solid green;
        padding: 50px;
        position: relative;
    }
</style>



@model MetroUIPrueba2.Models.Producto
<div class="container" id="principal">
    <h3>Nuevo Producto</h3>
    <hr />
    <form class="bg-white p-6 mx-auto border bd-default win-shadow" method="POST" action="@Url.Action("Create","Producto")">
        <table>
            <tr>
                <td style="padding-right:15px;">Codigo Producto:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Codigo" data-role="input" data-append="#" class="input-lg"></td>
            </tr>
            @Html.ValidationMessageFor(model => model.Codigo);
            <tr>
                <td style="padding-right:15px;">Ingreso:</td>
                <td style="padding-top: 10px;"><input style="width:347px;" type="date" name="Fecha" data-role="input" class="input-lg" /></td>
            </tr>
            @Html.ValidationMessageFor(model => model.Fecha);

            <tr>
                <td style="padding-right:15px;">Valoración:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Precio" onkeyup="format(this);" data-role="input" data-append="$.00" class="input-lg"></td>
            </tr>
            @Html.ValidationMessageFor(model => model.Precio);

            <tr>
                <td style="padding-right:15px;">Imagen:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Imagen" data-role="input" data-append="/Ruta" class="input-lg"></td>
            </tr>
            @Html.ValidationMessageFor(model => model.Imagen);

            <tr>
                <td style="padding-right:15px;">Descripción:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Descripcion" data-role="input" data-append="$.00" class="input-lg"></td>
            </tr>
            @Html.ValidationMessageFor(model => model.Descripcion);

            <tr>
                <td style="padding-right:15px;padding-top:20px;">Estado:</td>
                <td>
                    <select style="width:400px;" data-role="select" name="Estado" class="input-lg">
                        <option value="1">Fabricado</option>
                        <option value="2">En Diseño</option>

                    </select>
                </td>
            </tr>
            @Html.ValidationMessageFor(model => model.Estado);
            <tr>
                <td style="padding-right:15px;padding-top:20px;">Usuario:</td>
                <td>
                    <select style="width:400px;" name="Id" data-role="select" class="input-lg">
                        <option value="">seleccione</option>
                        <option value="Usr-1"></option>
                        <option value="Usr-2"></option>
                        }
                    </select>
                </td>
            </tr>

        </table><br />
        <div class="form-group">
            <button class="button success">Registrar</button>
            <input type="button" class="button" value="Cancel">
        </div>
    </form>

</div>
<script type="text/javascript">

    function format(input) {
        var num = input.value.replace(/\./g, '');
        if (!isNaN(num)) {
            num = num.toString().split('').reverse().join('').replace(/(?=\d*\.?)(\d{3})/g, '$1.');
            num = num.split('').reverse().join('').replace(/^[\.]/, '');
            input.value = num;
        }

        else {
            alert('Solo se permiten numeros');
            input.value = input.value.replace(/[^\d\.]*/g, '');
        }
    }
</script>

