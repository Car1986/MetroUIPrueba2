<div class="container" id="principal">
    <h3>Nuevo Producto</h3>
    <table><tr><td><a href="@Url.Action("Index","Producto")">Index/</a></td><td><a href="@Url.Action("Index","Insumo")">Insumos/</a></td><td><a href="@Url.Action("Index","Proveedor")">Proveedores</a></td></tr></table>
    <hr />
    <form class="bg-white p-6 mx-auto border bd-default win-shadow">
        <table>
            <tr>
                <td style="padding-right:15px;">Usuario:</td>
                <td>
                    <select style="width:400px;" data-role="select" class="input-lg">
                        <option value="1">User-01</option>
                        <option value="2">User-03</option>
                        <option value="3">User-05</option>
                    </select>
                </td>
            </tr>

            <tr><td style="padding-right:15px;">Codigo Producto:</td><td style="padding-top:10px;"><input style="width:400px;" type="text" data-role="input" data-append="#" class="input-lg"></td></tr>
            <tr><td style="padding-right:15px;">Ingreso:</td><td style="padding-top: 10px;"><input style="width:347px;" type="date" data-role="input" class="input-lg" /></td></tr>
            <tr><td style="padding-right:15px;">Valoración:</td><td style="padding-top:10px;"><input style="width:400px;" type="text" onkeyup="format(this);" data-role="input" data-append="$.00" class="input-lg"></td></tr>
            <tr><td style="padding-right:15px;">Imagen:</td><td style="padding-top:10px;"><input style="width:400px;" type="text" data-role="input" data-append="/Ruta" class="input-lg"></td></tr>
            <tr><td style="padding-right:15px;">Descripción:</td><td style="padding-top:10px;"><input style="width:400px;" type="text" data-role="input" data-append="$.00" class="input-lg"></td></tr>
            <tr>
                <td style="padding-right:15px;padding-top:20px;">Estado:</td>
                <td>
                    <select style="width:400px;" data-role="select" class="input-lg">
                        <option value="1">Fabricado</option>
                        <option value="2">En Diseño</option>

                    </select>
                </td>
            </tr>
        </table><br />
        <div class="form-group">
            <button class="button success">Registrar</button>
            <input type="button" class="button" value="Cancel">
        </div>
    </form>

</div>
<script type="text/javascript">

    function format(input) {
        var num = input.value.replace(/\./g, '');
        if (!isNaN(num)) {
            num = num.toString().split('').reverse().join('').replace(/(?=\d*\.?)(\d{3})/g, '$1.');
            num = num.split('').reverse().join('').replace(/^[\.]/, '');
            input.value = num;
        }

        else {
            alert('Solo se permiten numeros');
            input.value = input.value.replace(/[^\d\.]*/g, '');
        }
    }
</script>

