                    <td>$39.900</td>
                </tr>
                <tr>
                    <td scope="row">Total</td>
                    <td></td>
                    <td></td>
                    <td>$249.900</td>
                </tr>
            </tfoot>
        </table>
    </fieldset>
    <br />
    <fieldset class="container">
        <legend>Productos</legend>
        <select data-role="select" style="max-width: 200px">
            <option value="visa">visa</option>
            <option value="efectivo">efectivo</option>
        </select>
    </fieldset>
    <br />
    <a href="/Home/Index" class="button primary outline" style="width:100px">Pagar</a>
    <input onclick="goBack()" class="button primary outline" value="Atrás" style="width:100px" />
</div>

<script>
    function goBack() {
        window.history.back();
    }
</script>