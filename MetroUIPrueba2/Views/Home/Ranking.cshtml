@model IEnumerable<MetroUIPrueba2.Models.ViewModels.RankingArea>
@{
    ViewBag.Title = "Ranking";
    Layout = "~/Views/Shared/_IntranetLayout.cshtml";
}


<style>
    #principal {
        width: 900px;
        height: auto;
        top: 50%;
        margin-top: 30px;
        border: 1px solid green;
        padding: 50px;
        position: relative;
    }

    .user_session {
        margin-top: 3px;
        margin-left: 5px;
        width: 300px;
        position: relative;
        color: blue;
    }

        .user_session h6 {
            color: blue;
        }

    .div-img {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
<div class="user_session">
    <h6>Usuario: Juan Perez</h6>
</div>
<div class="container" id="principal">
    <div class="div-img"><img style="width:50px; height:50px;" src="~/pics/intranet/listar.jpg"></div>
    <h3>Lista de Areas</h3>
    <table class="table compact row-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Descripcion</th>
                <th>Cantidad Empleados</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (MetroUIPrueba2.Models.ViewModels.RankingArea ranking in Model)
            {
                <tr>
                    <td>@ranking.Area.Id</td>
                    <td>@ranking.Area.Descripcion</td>
                    <td>@ranking.Cantidad</td>                   
                    <td>
                        <a href="@Url.Action("View","Empleado", new { id = ranking.Area.Id })">Ver/</a>
                        <a href="@Url.Action("Edit", "Empleado", new  {id = ranking.Area.Id })">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


