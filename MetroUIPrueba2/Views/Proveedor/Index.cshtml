@{
    ViewBag.Title = "Intranet";
    Layout = "~/Views/Shared/_IntranetLayout.cshtml";
}

<style>
    #principal {
        width: 900px;
        height: auto;
        top: 50%;
        margin-top: 60px;
        border: 1px solid green;
        padding: 50px;
        position: relative;
    }
    .user_session {
        margin-top: 3px;
        margin-left: 5px;
        width: 300px;
        position: relative;
        color: blue;
    }

        .user_session h6 {
            color: blue;
        }
    #btn_nuevo {
        margin-bottom: 20px;
        margin-left: 10px;
    }
    .div-img {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<div class="user_session">
    <h6>Usuario: Juan Perez</h6>
</div>



<div class="container" id="principal">
    <div class="div-img"><img style="width:50px; height:50px;" src="~/pics/intranet/listar.jpg"></div> 
    <div style="display:flex; flex-direction:row; align-items:baseline; justify-content:space-between">
        <h3>Lista de Proveedores</h3>
        <a id="btn_nuevo" href="/Proveedor/nuevo" class="button primary rounded"><span class="mif-add icon">Nuevo</span></a>
    </div>
    <hr />
    <table class="table compact row-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Razon</th>
                <th>Rut</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Contacto</th>
                <th>Comuna</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Proveedor in Model)
            {
            <tr>

                <td>@Proveedor.Id</td>
                <td>@Proveedor.Razon</td>
                <td>@Proveedor.Rut</td>
                <td>@Proveedor.Direccion</td>
                <td>@Proveedor.Telefono</td>
                <td>@Proveedor.Email</td>
                <td>@Proveedor.Contacto</td>
                <td>@Proveedor.Comuna</td>
                <td>
                    <a href="@Url.Action("Ver", "Proveedor", new { id = 1 })">Ver/</a>
                    <a href="@Url.Action("Editar", "Proveedor", new { id = 1 })">Editar</a>
                </td>
            </tr>
            }
            </tbody>
    </table>
</div>
  



