
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Gerencia/Views/Shared/_IntranetLayoutGerencia.cshtml";
}

<style>
    #principal {
        width: 900px;
        height: auto;
        top: 50%;
        margin-top: 30px;
        border: 1px solid green;
        padding: 50px;
        position: relative;
    }

    .user_session {
        margin-top: 3px;
        margin-left: 5px;
        width: 300px;
        position: relative;
        color: blue;
    }

    #btn_nuevo {
        margin-bottom: 20px;
        margin-left: 10px;
    }

    .user_session h6 {
        color: blue;
    }

    .div-img {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
<div class="user_session">
    <h6>Usuario: Juan Perez</h6>
</div>
<div class="container" id="principal">
    <div class="div-img"><img style="width:50px; height:50px;" src="~/pics/intranet/listar.jpg"></div>
    <div style="display:flex; flex-direction:row; align-items:baseline; justify-content:space-between">
        <h3>Lista de Insumo</h3>
        <a id="btn_nuevo" href="@Url.Action("Create","Insumo")" class="button primary rounded"><span class="mif-add icon">Nuevo</span></a>
    </div>
    <hr />
    <table class="table compact row-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Descripcion</th>
                <th>Unidad Medida</th>    
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        <tbody>
            @foreach (MetroUIPrueba2.Models.Recurso r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.Descripcion</td>
                    <td>@r.Umedida</td>
                    <td>
                        <a href="@Url.Action("View","Recurso", new { id = r.Id })">Ver</a>
                    </td>
                </tr>
            }
        </tbody>        
    </table>

</div>