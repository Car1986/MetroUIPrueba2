@model MetroUIPrueba2.Models.Producto
@{
    ViewBag.Title = "View";
    Layout = "~/Areas/Gerencia/Views/Shared/_IntranetLayoutGerencia.cshtml";
}

<style>
    .login-form {
        width: 650px;
        height: auto;
        top: 50%;
        margin-top: -10px;
    }

    #principal {
        width: 900px;
        height: auto;
        top: 50%;
        margin-top: 60px;
        border: 1px solid green;
        padding: 50px;
        position: relative;
    }
</style>



<div class="container" id="principal">
    <h3>Ver Producto</h3>
    <hr />
    <form class="bg-white p-6 mx-auto border bd-default win-shadow">
        <table>
            <tr>
                <td style="padding-right:15px;">Codigo Producto:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Codigo" value="@Model.Codigo" data-role="input" data-append="<span class='mif-blocked'></span>" class="input-lg" readonly></td>
            </tr>
            <tr>
                <td style="padding-right:15px;">Ingreso:</td>
                <td style="padding-top: 10px;"><input style="width:347px;" type="text" name="Fecha" value="@Model.Fecha" data-role="input" data-append="<span class='mif-blocked'></span>" class="input-lg" readonly /></td>
            </tr>
            <tr>
                <td style="padding-right:15px;">Valoración:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Precio" value="@Model.Precio" onkeyup="format(this);" data-role="input" data-append="<span class='mif-blocked'></span>" class="input-lg" readonly></td>
            </tr>
            <tr>
                <td style="padding-right:15px;">Imagen:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Imagen" value="@Model.Imagen" data-role="input" data-append="<span class='mif-blocked'></span>" class="input-lg" readonly></td>
            </tr>
            <tr>
                <td style="padding-right:15px;">Descripción:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Descripcion" value="@Model.Descripcion" data-role="input" data-append="<span class='mif-blocked'></span>" class="input-lg" readonly></td>
            </tr>
            <tr>
                <td style="padding-right:15px;padding-top:20px;">Estado:</td>
                <td>
                    <input style="width:400px;" type="text" name="Descripcion" value="@Model.Estado" data-role="input" data-append="<span class='mif-blocked'></span>" class="input-lg" readonly>

                </td>
            </tr>
        </table><br />
    </form>

</div>
<script type="text/javascript">

    function format(input) {
        var num = input.value.replace(/\./g, '');
        if (!isNaN(num)) {
            num = num.toString().split('').reverse().join('').replace(/(?=\d*\.?)(\d{3})/g, '$1.');
            num = num.split('').reverse().join('').replace(/^[\.]/, '');
            input.value = num;
        }

        else {
            alert('Solo se permiten numeros');
            input.value = input.value.replace(/[^\d\.]*/g, '');
        }
    }
</script>

