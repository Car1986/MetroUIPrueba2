@model MetroUIPrueba2.Models.Proveedor
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Gerencia/Views/Shared/_IntranetLayoutGerencia.cshtml";
}

<style>
    #principal {
        width: 800px;
        height: 650px;
        top: 50%;
        margin-top: 45px;
        border: 1px solid green;
        padding-top: 10px;
        padding-left: 60px;
        position: relative;
    }
</style>

<div class="container" id="principal">
    <h3>Editar Proveedor</h3>
    <hr />
    <form class="bg-white p-6 mx-auto border bd-default win-shadow" method="POST" action="@Url.Action("Edit","Proveedor", new { id = Model.Id })">
        <table>
            <tr>
                <td style="padding-right:15px;">Razón Social:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Razon" data-role="input" value="@Model.Razon" data-append="#" class="input-lg"></td>
            </tr>
            <tr>
                <td style="padding-right:15px;">R.U.T:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Rut" data-role="input" value="@Model.Rut" data-append="#" class="input-lg"></td>
            </tr>
            <tr>
                <td style="padding-right:15px;">Dirección:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Direccion" data-role="input" value="@Model.Direccion" data-append="#" class="input-lg"></td>
            </tr>
            <tr>
                <td style="padding-right:15px;">Teléfono:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Telefono" data-role="input" value="@Model.Telefono" data-append="#" class="input-lg"></td>
            </tr>
            <tr>
                <td style="padding-right:15px;">Email:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Email" data-role="input" value="@Model.Email" data-append="#" class="input-lg"></td>
            </tr>

            <tr>
                <td style="padding-right:15px;">Contacto:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Contacto" data-role="input" value="@Model.Contacto" data-append="#" class="input-lg"></td>
            </tr>
            <tr>
                <td style="padding-right:15px;">Comuna:</td>
                <td style="padding-top:10px;">
                    <select style="width:400px; margin-top:10px;" name="Comuna" data-role="select" class="input-lg">
                        <option value="@Model.Comuna">@Model.Comuna</option>
                        <option value="2">Valparaiso</option>
                        <option value="3">Concepcion</option>
                    </select>
                </td>
            </tr>

        </table><br />
        <div class="form-group">
            <button type="submit" class="button success">Actualizar</button>
            <input type="button" class="button" value="Cancel">
        </div>
    </form>

</div>
<script type="text/javascript">

    function format(input) {
        var num = input.value.replace(/\./g, '');
        if (!isNaN(num)) {
            num = num.toString().split('').reverse().join('').replace(/(?=\d*\.?)(\d{3})/g, '$1.');
            num = num.split('').reverse().join('').replace(/^[\.]/, '');
            input.value = num;
        }

        else {
            alert('Solo se permiten numeros');
            input.value = input.value.replace(/[^\d\.]*/g, '');
        }
    }
</script>

