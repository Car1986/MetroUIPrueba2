@model MetroUIPrueba2.Models.Empleado
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Gerencia/Views/Shared/_IntranetLayoutGerencia.cshtml";
}

<style>
    #principal {
        width: 800px;
        height: 600px;
        top: 50%;
        margin-top: 55px;
        border: 1px solid green;
        padding-top: 10px;
        padding-left: 60px;
        position: relative;
    }
</style>

<div class="container" id="principal">
    <h3>Nuevo Empleado</h3>
    <hr />
    <form class="bg-white p-6 mx-auto border bd-default win-shadow" method="POST" action="@Url.Action("Create","Empleado")">
        <table>
            <tr>
                <td style="padding-right:15px;">Rut:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Rut" data-role="input" data-append="#" class="input-lg"> @Html.ValidationMessageFor(model => model.Rut) </td>               
            </tr>           
            <tr>
                <td style="padding-right:15px;">Nombres:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Nombres" data-role="input" data-append="#" class="input-lg"> @Html.ValidationMessageFor(model => model.Nombres)</td>
            </tr>            
            <tr>
                <td style="padding-right:15px;">Apellidos:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Apellidos" data-role="input" data-append="#" class="input-lg"> @Html.ValidationMessageFor(model => model.Apellidos) </td>
            </tr>            
            <tr>
                <td style="padding-right:15px;">Dirección:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Direccion" data-role="input" data-append="#" class="input-lg">  @Html.ValidationMessageFor(model => model.Direccion) </td>
            </tr>           
            <tr>
                <td style="padding-right:15px;">Teléfono:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Telefono" data-role="input" data-append="#" class="input-lg">  @Html.ValidationMessageFor(model => model.Telefono) </td>
            </tr>
            <tr>
                <td style="padding-right:15px;">Email:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Correo" data-role="input" data-append="#" class="input-lg"> @Html.ValidationMessageFor(model => model.Correo) </td>
            </tr>            
            <tr>
                <td style="padding-right:15px;">Cargo:</td>
                <td style="padding-top:10px;"><input style="width:400px;" type="text" name="Cargo" data-role="input" data-append="#" class="input-lg"> @Html.ValidationMessageFor(model => model.Cargo) </td>
            </tr>            
        </table><br />
        <div class="form-group">
            <button type="submit" class="button success">Registrar</button>
            <input type="button" class="button" value="Cancel">
        </div>
    </form>

</div>

